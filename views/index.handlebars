<h1>Eat-Da-Burger!</h1>


<div class="container">
  <div class="row">
    <div class="col s6">
      {{#each burger}} {{#unless this.devoured}}
      <div class="col-xs-9 text-center">
        <pre>{{this.id}}. {{this.burger_name}}</pre>
      </div>

      <div class="col=xs-3 text-center">
        <div>
          <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default">DEVOUR IT!
            </button>
          </form>
        </div>
        {{/unless}} {{/each}}
      </div>
      </div>

      <div class="col s6">
        {{#each burger}} {{#if this.devoured}}
        <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>{{/if}}
        {{/each}}

      </div>
    </div>
  </div>


  <h2>Add A Burger Option</h2>
<div class="container">
  <div class="row">
    <div class="col s12 text-center enter_section">
      <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" value="" id="text-enter-button">SUBMIT</button>
                <button type="submit" class="add-burger-button">Add The Burger</button>
      </form>
      <p>Enter in a burger you would like to eat!</p>
    </div>
  </div>