<h1>EAT DA BURGER!</h1>

<h2>TO BE DEVOURED!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block }}
    {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED!</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
      <li>{{id}}.{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="new-burger">Burger Name:</label>
    <input type="text" id="new-burger" name="name">
  </div>

  <button class = "selector" type="submit">Add Burger</button>
</form>
