<h1>Eat-Da-Burger!</h1>


  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burger_data}}
          {{#unless this.devoured}}
            <div>
              <form method="POST" action="/burgers/update?_method=PUT" method="POST">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-default">
                  DEVOUR IT!
                </button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>


<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Add another burger">
      <button type="submit" class="add-burger-button">Add The Burger</button>
    </form>
  </div>
</div>